<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="patient"
            type="com.example.consultationprototype.model.Patient"
            />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:gravity="left"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:gravity="left"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvIdPatient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{Long.toString(patient.idPatient)}"
                    android:textSize="14sp"
                    android:textColor="#ffff"
                    />

                <TextView
                    android:id="@+id/AgePatient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{patient.agePatient}"
                    android:textSize="14sp"
                    android:textColor="#ffff"
                    />
                <TextView
                    android:id="@+id/SexePatient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{patient.sexePatient}"
                    android:textSize="14sp"
                    android:textColor="#ffff"
                    />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPoidsPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Long.toString(patient.poidsPatient)}"
                android:textSize="14sp"
                android:textColor="#ffff"
                />
            <TextView
                android:id="@+id/tvPbPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Long.toString(patient.pbPatient)}"
                android:textSize="14sp"
                android:textColor="#ffff"
                />

            <TextView
                android:id="@+id/tvTaillePatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Long.toString(patient.taillePatient)}"
                android:textSize="14sp"
                android:textColor="#ffff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvAddressePatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Long.toString(patient.idAddrPatient)}"
                android:textSize="14sp"
                android:textColor="#ffff"
                />
            <TextView
                android:id="@+id/tvDiagnosticPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Long.toString(patient.idDiagPatient)}"
                android:textSize="14sp"
                android:textColor="#ffff"
                />

            <TextView
                android:id="@+id/tvDateConsultPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{patient.dateconsultPatient}"
                android:textSize="14sp"
                android:textColor="#ffff"
                />
        </LinearLayout>

        </LinearLayout>
</layout>